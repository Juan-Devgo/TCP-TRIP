---
import Github from '../icons/github.astro';
import { translations, defaultLang, type Language } from '../i18n/translations';

interface Props {
  lang?: Language;
}

const { lang = defaultLang } = Astro.props;
const t = translations[lang || defaultLang];

const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: '/', label: t.nav.baseConverter },
  { href: '/subnet', label: t.nav.subnetCalculator },
  { href: '/ip', label: t.nav.tcpIpTools },
];

const resources = [
  { href: '/docs', label: t.footer.documentation },
  { href: '/api', label: t.footer.apiReference },
  { href: '/examples', label: t.footer.examples },
];

const socialLinks = [
  {
    href: 'https://github.com/Juan-Devgo/TCP-TRIP',
    label: 'GitHub',
    icon: 'github',
  },
  { href: 'https://twitter.com/tcptrip', label: 'Twitter', icon: 'twitter' },
  { href: 'https://discord.gg/tcptrip', label: 'Discord', icon: 'discord' },
];
---

<footer
  class="bg-linear-to-r from-zinc-900 via-zinc-800 to-zinc-900 border-t border-zinc-700/50"
>
  <div class="max-w-4xl mx-auto px-4 py-10">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="md:col-span-1">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-0">
          <span class="font-bold text-2xl text-amber-700 mx-1">TCP</span>
          <span class="font-bold text-2xl text-amber-800">TR</span>
          <span class="font-bold text-2xl text-amber-700">IP</span>
        </a>
        <p class="text-zinc-500 text-sm leading-relaxed">
          {t.footer.description}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-white font-semibold text-sm mb-4">{t.footer.tools}</h3>
        <ul class="flex flex-col gap-2">
          {
            quickLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-zinc-400 text-sm hover:text-amber-400 transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="text-white font-semibold text-sm mb-4">
          {t.footer.resources}
        </h3>
        <ul class="flex flex-col gap-2">
          {
            resources.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-zinc-400 text-sm hover:text-amber-400 transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))
          }
        </ul>
      </div>

      <!-- Social -->
      <div>
        <h3 class="text-white font-semibold text-sm mb-4">
          {t.footer.connect}
        </h3>
        <ul class="flex items-center gap-3">
          {
            socialLinks.map((link) => (
              <li>
                <a
                  href={link.href}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center justify-center w-10 h-10 rounded-lg bg-zinc-700/50 text-zinc-400 hover:text-white hover:bg-zinc-700 transition-all"
                  title={link.label}
                >
                  {link.icon === 'github' && <Github />}
                  {link.icon === 'twitter' && (
                    <svg
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                    </svg>
                  )}
                  {link.icon === 'discord' && (
                    <svg
                      class="w-5 h-5"
                      fill="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.946 2.4189-2.1568 2.4189z" />
                    </svg>
                  )}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div
      class="mt-10 pt-6 border-t border-zinc-700/50 flex flex-col md:flex-row items-center justify-between gap-4"
    >
      <p class="text-zinc-500 text-sm">
        ðŸ„¯ {currentYear}
        {t.footer.copyleft}
      </p>
      <div class="flex items-center gap-6">
        <a
          href="/privacy"
          class="text-zinc-500 text-sm hover:text-zinc-300 transition-colors"
        >
          {t.footer.privacy}
        </a>
        <a
          href="/terms"
          class="text-zinc-500 text-sm hover:text-zinc-300 transition-colors"
        >
          {t.footer.terms}
        </a>
      </div>
    </div>
  </div>
</footer>
